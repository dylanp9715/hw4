<h2><%= @place.name %></h2>

<p>
  <% user = User.find_by({ "id" => session["user_id"] })%>
  <% if user %>
    <a href="/entries/new?place_id=<%= @place.id %>" class="btn btn-primary mb-3">New Post</a>
  <% end %>
</p>

<div class="container">
  <div class="row">
    <% for entry in @entries %>
      <% if user.id == entry.user_id %>
        <div class="col-md-4 mb-4">
          <div>
            <h3><%= entry.title %></h3>
            <h4 class="text-muted"><%= entry.occurred_on %></h4>
            <div class="entry-image mb-3">
              <!-- Placeholder for image -->
              <img src="path/to/image" alt="<%= entry.title %>" class="img-fluid">
            </div>
            <p><%= entry.description %></p>
          </div>
        </div>
      <% end %>
    <% end %>
  </div>
</div>

<p>
  <a href="/places" class="btn btn-secondary">Back to All Places</a>
</p>